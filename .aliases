function gateway(){
  if [ -z "$1" ]; then
    echo "Missing parameter"
    return 1
  fi
  sudo ip ro del default
  sudo ip ro add default via 192.168.1.$1 dev eth0
  ip ro
}

function ban_ip() {
    iptables -A INPUT -s $1 -j DROP
}

